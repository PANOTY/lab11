#include <stdio.h>

// ฟังก์ชันเพื่อหาค่า Factorial ของ n
int factorial(int n) {
    if (n == 0 || n == 1) {
        return 1; // กรณีฐาน
    } else {
        return n * factorial(n - 1); // คำนวณ n! = n x (n-1)!
    }
}

// ฟังก์ชันเพื่อแสดงชุดอนุกรม
void printFactorialSeries(int n) {
    if (n > 1) {
        printf("%d x ", n);
        printFactorialSeries(n - 1);
    } else {
        printf("1");
    }
}

int main() {
    int n;

    // รับค่าจากผู้ใช้
    printf("Enter a number: ");
    scanf("%d", &n);

    // แสดงผลชุดอนุกรมและค่า Factorial
    printf("%d! = ", n);
    printFactorialSeries(n);
    printf("\n%d! = %d\n", n, factorial(n));

    return 0;
}
